<html>

<head>
    <link rel="stylesheet" type="text/css" href="style.css">
    <title>Group</title>
</head>

<body>
    <header>
        <h3>Data Group Management</h3>
    </header>
    <div class="menu">
        <a href="contacts">Contact</a>
        <a href="groups">Group</a>
        <a href="profiles">Profile</a>
        <a href="addresses">Address</a>
    </div>
    <div id="main-table">
        <table style="width:80%" border="1">
            <tr>
                <th>ID</th>
                <th>Name of Group</th>
                <th colspan="3">Action</th>
            </tr>
            <% for(var i=0; i< dataRow.length; i++)  {%>
                <tr>
                    <td>
                        <%=dataRow[i].id %>
                    </td>
                    <td>
                        <%=dataRow[i].name_of_group %>
                    </td>
                    <td>
                        <a href="/groups/contacts/<%=dataRow[i].id%>">Assign Contacts </a>
                        </td>
                    <td>
                        <a href="/groups/edit/<%=dataRow[i].id%>">Edit</a>
                    </td>
                    <td><a href="/groups/delete/<%=dataRow[i].id%>">Delete</a></td>

                </tr>
                <%}%>
        </table>
    </div>

    <div id="form-input">
        <form action="/groups" method="post">
            <br> Name of Group:
            <br>
            <input type="text" name="name_of_group"> <br>
            <br>
            <input type="submit" value="Save">
        </form>

    </div>

</body>

</html>